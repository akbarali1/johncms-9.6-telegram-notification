                    </div>
                    <div class="text-muted forum-view-counter ml-3">
                        <a href="<?= $article->url ?>#article-comments">
                            <svg class="icon download-button-icon mr-1">
                                <use xlink:href="<?= $this->asset('icons/sprite.svg') ?>#forum"/>
                            </svg>
                            <?= $article->comments_count ?>
                        </a>
                    </div>
                </div>
            </div>
        <?php endforeach; ?>
        <div class="mt-3">
            <?= $articles->render() ?>
